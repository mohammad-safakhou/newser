{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://newser.ai/schemas/plan-graph.json",
  "title": "Planner Graph",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "tasks"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^v\\d+(?:\\.\\d+)*$"
    },
    "plan_id": {
      "type": "string",
      "minLength": 1
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    },
    "description": {
      "type": "string"
    },
    "reasoning": {
      "type": "string"
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "execution_order": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "execution_layers": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/execution_layer"
      }
    },
    "tasks": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/task"
      }
    },
    "edges": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/edge"
      }
    },
    "budget": {
      "$ref": "#/definitions/budget"
    },
    "estimates": {
      "$ref": "#/definitions/estimates"
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "definitions": {
    "task": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "type"],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "type": {
          "type": "string",
          "minLength": 1
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "priority": {
          "type": "integer",
          "minimum": 0,
          "maximum": 5
        },
        "parameters": {
          "type": "object",
          "additionalProperties": true
        },
        "depends_on": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "timeout": {
          "type": "string",
          "minLength": 1
        },
        "estimated_cost": {
          "type": "number",
          "minimum": 0
        },
        "estimated_time": {
          "type": "string",
          "minLength": 1
        },
        "estimated_tokens": {
          "type": "integer",
          "minimum": 0
        },
        "outputs": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "execution_layer": {
      "type": "object",
      "additionalProperties": false,
      "required": ["stage", "tasks"],
      "properties": {
        "stage": {
          "type": "string",
          "minLength": 1
        },
        "tasks": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "checkpoint_token": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "edge": {
      "type": "object",
      "additionalProperties": false,
      "required": ["from", "to"],
      "properties": {
        "from": {
          "type": "string",
          "minLength": 1
        },
        "to": {
          "type": "string",
          "minLength": 1
        },
        "kind": {
          "type": "string",
          "enum": ["control", "data"]
        },
        "condition": {
          "type": "string"
        }
      }
    },
    "budget": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "max_cost": {
          "type": "number",
          "minimum": 0
        },
        "max_time": {
          "type": "string",
          "minLength": 1
        },
        "max_tokens": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "estimates": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "total_cost": {
          "type": "number",
          "minimum": 0
        },
        "total_time": {
          "type": "string",
          "minLength": 1
        },
        "total_tokens": {
          "type": "integer",
          "minimum": 0
        }
      }
    }
  }
}
